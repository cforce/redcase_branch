
<table width="100%" style="border-collapse: collapse">
    <tr>
        <td colspan="2">&nbsp;</td>
        <td align="right">
            <% form_tag({ :action =>  :export_to_excel, :project_id => @project.id, :time => Time.now }) do %>
                <%= link_to '<table cellpadding="0" cellspacing="0" class="rc-link"><tr valign="center" class="rc-link-tr"><td>' + image_tag('trans.png', :plugin => 'redcase', :size=> '32x32', :style => 'float: left') + '</td><td>Full report</td></tr></table>',
                            { :action =>  :export_to_excel, :project_id => @project.id, :time => Time.now },
                            { :class => 'no_underline', :submit => 'spec_id'} %>
            <% end %>
            <% form_tag({ :action =>  :export_to_rtf, :project_id => @project.id, :time => Time.now }, :id => 'spec_id') do %>
                <%= link_to '<table cellpadding="0" cellspacing="0" class="rc-link"><tr valign="center" class="rc-link-tr"><td>' + image_tag('trans.png', :plugin => 'redcase', :size=> '32x32', :style => 'float: left') + '</td><td>Test case specification</td></tr></table>',
                            { :action =>  :export_to_rtf, :project_id => @project.id, :time => Time.now },
                            { :class => 'no_underline', :submit => 'spec_id' } %>
            <% end %>
        </td>
        <td>&nbsp;</td>
    </tr>
    <tr valign="top">
        <td>&nbsp;</td>
        <td align="center" class="back" style="border: 1px #bbbbbb solid; width: 550px">
            <div id="graph_id">
                <table width="100%">
                    <tr>
                        <td align="center" valign="middle">
                            <div id="combos_id" style="display: inline-block; vertical-align: middle"><%= render :partial => 'combos' %></div>
                            &nbsp;
                            <div id="download_button_id" style="display: inline-block; vertical-align: middle"><%= render :partial => 'download_button'%></div>
                        </td>
                    </tr>
                </table>
                <div id="chart_id" class="graph" style="width: 510px; height: 510px; padding: 4px">
                    <%= @graph %>
                </div>
            </div>
        </td>
        <td align="center" class="y-back" style="border: 1px #bbbbbb solid; width: 550px; padding: 0px">
            <div id="table_id" style="width: 100%">
                <%= render :partial => 'adv_table' %>
            </div>
        </td>
        <td>&nbsp;</td>
    </tr>
</table>
